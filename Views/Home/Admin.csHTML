<div class="container Add" *ngIf="!showADD" >
  <h1 class="my-2">Add Device</h1>
  <input type="text" class="input-box" placeholder="Enter device name">
  <button class="button ">Add</button>
</div>
<div class="container-fluid px-1 py-5 mx-auto AssignDevice" *ngIf="!showAss" >
  <div class="row d-flex justify-content-center">
      <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
          <h1>Assign Device</h1>
      
          <div class="card  cardAd">
              <h5 class="text-center mb-4"></h5>
              <form class="form-card p-4" onsubmit="event.preventDefault()">
                  <div class="row justify-content-between text-left">
                      <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label ">User Name<span class="text-danger"> *</span></label> <input type="text" id="fname" name="fname" placeholder="Enter User Name" onblur="validate(1)"> </div>
                      <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label ">User ID <span class="text-danger"> *</span></label> <input type="text" id="lname" name="lname" placeholder="Enter User Id" onblur="validate(2)"> </div>
                  </div>
                  <div class="row justify-content-between text-left">
                      <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label ">Device Type<span class="text-danger"> *</span></label> <input type="text" id="email" name="email" placeholder="Enter Device Type" onblur="validate(3)"> </div>
                      <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label ">Device Id<span class="text-danger"> *</span></label> <input type="text" id="mob" name="mob" placeholder="Enter Device Id" onblur="validate(4)"> </div>
                  </div>
                  <div class="row justify-content-between text-left">
                    <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label ">Assigned by<span class="text-danger"> *</span></label> <input type="text" id="email" name="email" placeholder="Enter Employee Code" onblur="validate(3)"> </div>
              
                </div>
                  
                 
                  <div class="row justify-content-center">
                      <div class="form-group col-sm-6 m-5">  <button type="button" class="but">Assign Device</button> </div>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>
