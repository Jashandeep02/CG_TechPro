<body>
<section class="vh-220 p-3">
  <div class="container h-100 mb-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-white" style="border-radius: 25px;">
          <div class="card-body p-md-5" style="background-color: #000000;">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 " style="margin-top: 6%;">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>

                <form class="mx-1 mx-md-4" onsubmit="return false;">

                  <div class="d-flex flex-row align-items-center mb-5">
                    <i class="fa fa-envelope fa-lg me-3 fa-fw mb-4"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="email" id="form3Example3c" class="form-control" required>
                      <label class="form-label" for="form3Example3c" formControlName="email">Your Email</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <style>
                      .custom-in-between-size {
                        font-size: 1.55em;
                      }
                    </style>
                    <i class="fa fa-lock custom-in-between-size me-3 fa-fw mb-4"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" id="form3Example4c" class="form-control" required>
                      <label class="form-label" for="form3Example4c" formControlName="Password">Password</label>
                      <div id="passwordErrorLength" class="form-text text-danger" style="display: none;">Password must be greater than 8 characters.</div>
                      <div id="passwordErrorUppercase" class="form-text text-danger" style="display: none;">Password must contain at least one uppercase character.</div>
                      <div id="passwordErrorSpecial" class="form-text text-danger" style="display: none;">Password must contain at least one special character.</div>
                      <div id="passwordErrorNumber" class="form-text text-danger" style="display: none;">Password must contain at least one number.</div>
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <a href="Employee.html"> <button type="submit" class="btn btn-light btn-lg" id="login" onclick="validatePasswordAndSubmit()">Login</button></a>
                  </div>

                </form>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://image.freepik.com/free-vector/mobile-login-concept-illustration_114360-2650.jpg"
                     class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function validatePassword() {
    const password = document.getElementById('form3Example4c').value;
    const passwordRegex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9]).{8,}$/;

    if (!passwordRegex.test(password)) {
      const lengthError = document.getElementById('passwordErrorLength');
      const uppercaseError = document.getElementById('passwordErrorUppercase');
      const specialError = document.getElementById('passwordErrorSpecial');
      const numberError = document.getElementById('passwordErrorNumber');

      if (password.length < 8) {
        lengthError.style.display = 'block';
      } else {
        lengthError.style.display = 'none';
      }

      if (!/(?=.*[A-Z])/.test(password)) {
        uppercaseError.style.display = 'block';
      } else {
        uppercaseError.style.display = 'none';
      }

      if (!/(?=.*[^a-zA-Z0-9])/.test(password)) {
        specialError.style.display = 'block';
      } else {
        specialError.style.display = 'none';
      }

      if (!/(?=.*\d)/.test(password)) {
        numberError.style.display = 'block';
      } else {
        numberError.style.display = 'none';
      }

      return false;
    }

    return true;
  }

  function validatePasswordAndSubmit() {
    if (validatePassword()) {
      const email = document.getElementById('form3Example3c').value;
      const password = document.getElementById('form3Example4c').value;

      // Do your login submission here
      alert("Login successful!");
    }
  }
</script>

</body>
</html>


